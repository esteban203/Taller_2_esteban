<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Wear</title>
    <link rel="stylesheet" href="css/wear_estilos.css">
    <link rel="stylesheet" href="css/estilos.css">


</head>

<body>
    <header>
        <div class="nav_loc">
            <ul>
                <img src="img/logo.png" id="logo" />
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a class="active" href="">Hombres</a>
                </li>
                <li>
                    <a>Mujeres</a>
                </li>
                <li>
                    <a>interacción</a>
                </li>
                <li>
                    <a>Sobre nosotros</a>
                </li>
                <div class="dere">
                    <a href="/checkout" class="btn loud-link-hover">
                        <span class="carrito">0</span>
                        <img src="img/carrito.png" id="car" />

                    </a>
                    <button type="button" class="buscar">
                        <img src="img/lupa.png" alt="" style="vertical-align: middle">
                    </button>
                    <input type="search" placeholder="Buscar" class="buscarNavegador">
                </div>
            </ul>
        </div>
    </header>



    <section class="cuerpo">

        <div class="slide" style='background-image: url("img/slider_3.jpg");'>


            <div class="coleccion" style='background-image: url("img/colecciones.png");'>


            </div>
        </div>

        <!--productos de la tienda-->
        <div class="productos" style='background-image: url("img/fon_3.png");'>

            <div class="filtro">

                <b>Filtra tu Búsqueda</b>




                <h1>Color:</h1>



                <div class="colores">

                    <a class="botonNegro" href="/?color=negro"></a>
                    <a class="botonGris" href="/?color=gris"></a>
                    <a class="botonVinotinto" href="/?color=vinotinto"></a>
                    <a class="botonAzul" href="/?color=azul"></a>
                </div>
                <h1>Colección:</h1>




                <label class="container">Todas
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>


                <label class="container">Epica
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">Essensial
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">Atypical
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>

            </div>


            <div class="mostrar">
                {{#each camisas}}

                <div class="cami" data-id="{{this._id}}">
                    <a href="/producto/{{nombre}}">
                        <div class="imagen" style="background-image: url({{camisa}});"></div>
                    </a>
                    <div class="descri">
                        <p class="nom">
                            <b>{{nombre}}</b>
                        </p>
                        <p class="desc">
                            Autor: {{Autor}}
                        </p>

                        <p class="desc">
                            Colección: {{coleccion}}
                        </p>

                        <p class="prec">
                            <b> ${{precio}}</b>
                        </p>



                    </div>



                    <div class="boton" align="center">
                        <a href="/producto/{{nombre}}">
                            <button class="vermas">Ver más</button>
                        </a>


                        <button class="agregar">Añadir al carrito</button>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </section>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="js/script.js"></script>
    <script src="js/cliente.js"></script>
    <script src="js/productos.js"></script>

</body>

